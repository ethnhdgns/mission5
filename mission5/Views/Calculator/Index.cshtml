@{
    ViewData["Title"] = "Training Cost Calculator";
}

<!DOCTYPE html>
    <html lang="en">
    <head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </head>
    <body>
    <h1>Training Cost Calculator</h1>

    <label for="hours">Enter Number of Hours:</label>
    <input type="number" id="hours" min="1">
    <span id="error-message" style="color: red; display: none;">Please enter a valid positive number</span>

    <p>Rate per Hour: <input type="text" id="rate" value="50" readonly></p>

    <button id="calculate">Calculate Total</button>

    <p>Total Cost: <span id="total-cost">$0</span></p>

    <script>
    $(document).ready(function(){
    $("#calculate").click(function(){
        let hours = $("#hours").val();
        let rate = $("#rate").val();

        if (hours <= 0 || isNaN(hours)) {
            $("#error-message").show();
            return;
        } else {
            $("#error-message").hide();
        }

        let total = hours * rate;
            $("#total-cost").text(`$${total}`);
    });
});
</script>

    <a asp-controller="Home" asp-action="Index">Back to Home</a>
    </body>
    </html>